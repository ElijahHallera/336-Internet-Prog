                <option value = "vertical">Vertical</option>
            </select>
            <button class="btn btn-info"> Search! </button>
            
        </form> <br>
        
        <%let Index = Math.floor(Math.random() * 25);%> <!--this generates an image between 1 and 25 -->
        <%let Index2 = Math.floor(Math.random() * 25);%>
        <%let Index3 = Math.floor(Math.random() * 25);%>
        <%let Index4 = Math.floor(Math.random() * 25);%>
    
    <div class = "flex-container">
        <label><span><%=images.hits[Index].likes%></span>&ensp;Likes</label>
        <img src='<%= images.hits[Index].largeImageURL %>' width='250'>
        </br>
        <label><span><%=images.hits[Index2].likes%></span>&ensp;Likes</label>
        <img src='<%= images.hits[Index2].largeImageURL %>' width='250'>
        </br>
        <label><span><%=images.hits[Index3].likes%></span>&ensp;Likes</label>
        <img src='<%= images.hits[Index3].largeImageURL %>' width='250'>
        </br>
        <label><span><%=images.hits[Index4].likes%></span>&ensp;Likes</label>
        <img src='<%= images.hits[Index4].largeImageURL %>' width='250'>
        </br> 
